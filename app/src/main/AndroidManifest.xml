<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.master.gardens">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup">

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key" />
        <activity android:name="com.master.gardens.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
            <activity
                android:name="com.master.gardens.Login"
                android:windowSoftInputMode="adjustResize" >
            </activity>
        <activity android:name="com.master.gardens.Home"
            android:screenOrientation="portrait"/>
        <activity android:name="com.master.gardens.Search"
            android:screenOrientation="portrait"/>
        <activity android:name="com.master.gardens.About"
            android:screenOrientation="portrait"/>
        <activity android:name="com.master.gardens.Gatewall"
            android:screenOrientation="portrait"/>
        <activity android:name="com.master.gardens.Fruit"
            android:screenOrientation="portrait"/>
        <activity android:name="com.master.gardens.FruitGatewall"
            android:screenOrientation="portrait"/>


        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>

</manifest>